.card
  @extend .mx-3
  position relative

  for i in card-variants
    color = var(unquote('--'+i+'-color'))
    &.{i}
      if i != primary
        color color
      box-shadow(color)
      border(color)

  .title
    background background-color
    position absolute
    padding 2px 10px
    font-size 1.1em
    @extend .mb-1
    top -12px
    left 19px
    z-index 6

    &::selection
      color inherit

  .body
    padding 20px 30px
    text-align left

  .close
    &:before
      position absolute
      text-align right
      padding 7px 22px
      cursor pointer
      display block
      content "x"
      right 0px
      top 0
